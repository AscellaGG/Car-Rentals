@page "/"
@using Car_Rental.Business.Classes;
@using Car_Rental.Common.Enums;
@inject BookingProcessor bp
@inject NewVehicle NewVehicle
@inject NewPerson NewPerson

<head>
    <link href="css/index.css" rel="stylesheet" />
   
</head>

<PageTitle>Index</PageTitle>

<body>

    <header>
        <h1>Car Rentals</h1>
    </header>

    <section class="vehicles p-3 my-4 bg-body rounded-1">
        <h4 class="p-2">Vehicles</h4>

        <table class="table table-hover table-striped vehicleTable">
            <thead>
                <tr>
                    <th scope="col">RegNo</th>
                    <th scope="col">Make</th>
                    <th scope="col">Vehicle Type</th>
                    <th scope="col">Odometer</th>
                    <th scope="col">Cost/km</th>
                    <th scope="col">$/day</th>
                    <th scope="col"></th>
                    <th scope="col">Actions</th>
                    <th scope="col" style="width:100px;">Status</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td><input @bind="NewVehicle.RegNo"></td>
                    <td><input @bind="NewVehicle.Make"></td>
                    <td>
                        <select class="form-select" aria-label="Default select example" @bind="NewVehicle.Type">
                            <option value="@VehicleTypes.Combi">Combi</option>
                            <option value="@VehicleTypes.Sedan">Sedan</option>
                            <option value="@VehicleTypes.Van">Van</option>
                            <option value="@VehicleTypes.Motorcycle">Motorcycle</option>
                        </select>
                    </td>
                    <td><input type="number" min="0" @bind="NewVehicle.Odometer"></td>
                    <td><input type="number" min="0" @bind="NewVehicle.CostKm"></td>
                    <td><input type="number" min="0" @bind="NewVehicle.CostDay"></td>
                    <td></td>
                    <td><button class="btn btn-primary" @onclick="(()=>bp.AddVehicle(NewVehicle))">Add</button></td>
                    <td></td>
                </tr>

                @foreach (var v in bp.GetVehicles())
                {
                    <tr>
                        <th>@v.RegNo</th>
                        <td>@v.Make</td>
                        <td>@v.VehicleType</td>
                        <td>@v.Odometer</td>
                        <td>@v.CostKm</td>
                        <td>@v.CostDay</td>
                        
                        @if (v.VehicleStatus == VehicleStatuses.Booked)
                        {
                            <td></td>
                            <td></td>
                            <td><p class="car-status bg-danger">@v.VehicleStatus</p></td>                            
                        }
                        else
                        {
                            <td>
                                <select class="form-select" aria-label="Default select example" @bind="bp.SelectedSSN">
                                    <option selected="selected" value="SSN" disabled>SSN</option>
                                    @foreach (var c in bp.GetCustomers())
                                    {
                                        <option value="@c.SSN">@c.SSN, @c.FirstName @c.LastName</option>
                                    }
                                </select>
                            </td>
                            <td><button type="button" class="btn btn-primary" @onclick="(()=>bp.Rent(bp.GetPerson(bp.SelectedSSN), v))">Rent</button></td>
                            <td><p class="car-status bg-success">@v.VehicleStatus</p></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <section class="bookings p-3 my-4 bg-body rounded-1">
        <h4 class="p-2">Bookings</h4>

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">RegNo</th>
                    <th scope="col">Customer</th>
                    <th scope="col">Km Rented</th>
                    <th scope="col">Km Returned</th>
                    <th scope="col">Rented</th>
                    <th scope="col">Returned</th>
                    <th scope="col">Cost</th>
                    <th scope="col">Actions</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var b in bp.GetBookings())
                {
                    <tr>
                        <th scope="row">@b.Vehicle.RegNo</th>
                        <td>@b.Customer.LastName, @b.Customer.FirstName (@b.Customer.SSN)</td>
                        <td>@b.KmRented</td>
                        <td>
                            @if(b.KmReturned == null)
                            {
                                <input type="number" min="0" @bind="bp.ReturnedKM">
                            }
                            else
                            {
                                @b.KmReturned                                
                            }
                        </td>
                        <td>@b.DateRented.ToString("yyyy-MM-dd")</td>
                        <td>@(b.DateReturned != null ? b.DateReturned.Value.ToString("yyyy-MM-dd") : "")</td>
                        <td>@b.Cost</td>
                        @if (b.BookingSatus == BookingSatus.Closed)
                        {
                            <td></td>
                            <td><p class="car-status bg-danger">@b.BookingSatus</p></td>
                        }
                        else
                        {
                            <td><button class="btn btn-primary"  @onclick="(()=>bp.ReturnVehicle(b.Vehicle))">Return</button></td>
                            <td><p class="car-status bg-success">@b.BookingSatus</p></td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </section>

    <section class="customers p-3 my-4 bg-body rounded-1">
        <h4 class="p-2">Customers</h4>

        <table class="table table-hover table-striped">
            <thead>
                <tr>
                    <th scope="col">SSN</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>

                <tr>
                    <td><input @bind ="NewPerson.SSN" type="number" min="0" /></td>
                    <td><input @bind="NewPerson.LastName"></td>
                    <td><input @bind="NewPerson.FirstName"></td>
                    <td><button class="btn btn-primary" @onclick="(()=>bp.AddPerson(NewPerson))">Add</button></td>
                </tr>

                @if(bp.GetCustomers() is not null)
                {
                    @foreach(var c in bp.GetCustomers())
                    {
                        <tr>
                            <th scope="row">@c.SSN</th>
                            <td>@c.LastName</td>
                            <td>@c.FirstName</td>
                            <td></td>
                        </tr>
                    }
                } 
                @* <tr>
                    <th>@(bp.GetPerson(54841).SSN)</th>
                    <td>@(bp.GetPerson(54841).LastName)</td>
                    <td>@(bp.GetPerson(54841).FirstName)</td>
                </tr> *@
            </tbody>
        </table>
    </section>

</body>
